<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"

            android:id="@+id/img1"
            app:civ_border_width="1dp"
            app:civ_border_color="#A020F0" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nametxt"
            android:text="Produs"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#A020F0"
            android:layout_toRightOf="@id/img1"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/cntity"
            android:text="Cantitate:"
            android:textSize="22sp"
            android:textColor="#A020F0"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@+id/nametxt"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cantitatetxt"
            android:text="Cantitate"
            android:textSize="22sp"
            android:textColor="#A020F0"
            android:layout_toRightOf="@id/cntity"
            android:layout_below="@+id/nametxt"
            android:layout_marginLeft="3dp"

            />
        <TextView
            android:layout_width="46sp"
            android:layout_height="wrap_content"
            android:id="@+id/cd"
            android:text="Cod:"
            android:textSize="22sp"
            android:textColor="#A020F0"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@+id/cantitatetxt"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/codtxt"
            android:text="Cod"
            android:textSize="22sp"
            android:textColor="#A020F0"
            android:layout_toRightOf="@id/cd"
            android:layout_below="@+id/cantitatetxt"
            android:layout_marginLeft="10dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/codtxt"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="145dp"
                android:id="@+id/deleteBtn"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>